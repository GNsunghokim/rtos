# GNU Make project makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

.PHONY: clean prebuild prelink

ifeq ($(config),debug)
  TARGETDIR = bin/Debug
  TARGET = $(TARGETDIR)/z
  define BUILDCMDS
	@echo Running build commands
	make -C ../
	cp ../libz.a ../../
	cp ../../libz.a ../../../sdk/lib/
	mkdir -p ../../../sdk/include
	cp -rL ../*.h ../../../sdk/include/
  endef
  define CLEANCMDS
	@echo Running clean commands
	make -C ../ clean
  endef
endif

ifeq ($(config),release)
  TARGETDIR = bin/Release
  TARGET = $(TARGETDIR)/z
  define BUILDCMDS
	@echo Running build commands
	make -C ../
	cp ../libz.a ../../
	cp ../../libz.a ../../../sdk/lib/
	mkdir -p ../../../sdk/include
	cp -rL ../*.h ../../../sdk/include/
  endef
  define CLEANCMDS
	@echo Running clean commands
	make -C ../ clean
  endef
endif

$(TARGET):
	$(BUILDCMDS)

clean:
	$(CLEANCMDS)
